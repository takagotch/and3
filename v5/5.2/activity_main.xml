<?xml version="1.0" encoding="utf-8" ?>
<TabHost xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/tabHost"
	android:layout_width="match_parent"
	android:layout_height="match_parent">
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical">
		<TabWidget
			android:id="@android:id/tabs"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content">
		</TabWidget>
		<FrameLayout
			android:id="@android:id/tabcontent"
			android:layout_width="match_parent"
			android:layout_height="match_parent">

			<include
				android:id="@+id/tab1"
				layout="@layout/tab1" />
			<include
				android:id="@+id/tab2"
				layout="@layout/tab2" />
			<include
				android:id="@+id/tab3"
				layout="@layout/tab3" />

			<LinearLayout
				android:id="@+id/tab1"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:orientation="vertical">
				<TextView
					android:id="@+id/txt1"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="TOP PAGE" />
			</LinearLayout>
			<LinearLayout
				android:id="@+id/tab2"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:text="vertical" >
				<TextView
					android:id="@+id/txt2"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:orientation="QUESTION" />
			</LinearLayout>
			<LinearLayout
				android:id="@+id/tab3"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:orientation="vertical">
				<TextView
					android:id="@+id/txt3"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="ACCESS" />
			</LinearLayout>

		</FrameLayout>

	</LinearLayout>

</TabHost>

<ViewFlipper xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/vf"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:autoStart="true"
	android:flipInterval="3000"
	android:autoStart="true"
	android:filipInterval="3000"
	android:inAnimation="@android:anim/slide_in_left"
	android:outAnimation="@android:anim/slide_out_right">
	<TexView
		android:id="@+id/textView"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:drawableBottom="@drawable/elephant"
		android:text="ELEPHANT" />
	<TextView
		android:id="@+id/textView2"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:drawableBottom="@drawable/flower"
		android:text="FLOWER" />
	<TextView
		android:id="@+id/textView3"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:drawableBottom="@drawable/seal"
		android:text="SEAL" />
</ViewFipper>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_pretnt">
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical">
	</LinearLayout>
</ScrollView>


