<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:paddingTop="@dimen/activity_vertical_margin"
	android:orientation="horizontal"
	tools:context="com.tky.myfragment.MainActivity">

	<fragment
		android:id="@+id/listFragment"
		android:name="com.tky.myfragment.ListFragment"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:laout_weight="0.4" />

	<FrameLayout
		android:id="@+id/derailsFrame"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_weight="0.6" />

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">
	<Button
		android:id="@+id/btnSend"  //"@+id/btnSend"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:onClick="btnSend_onClick"
		android:text="DISPLAY"
		//
		android:layout_below="@+id/txtName"/>
	<EditText
		android:id="@+id/txtName" //"@+id/txtKeywd"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:inputType="text"
		//
		anroid:text="http://tky.com/" />
</RelativeLayout>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent">
	<fragment
		android:id="@+id/listFragment"
		android:name="com.tky.myfragment.ListFragment"
		android:layout_width="match_parent"
		android:layout_height="match_parent" />
</FrameLayout>


